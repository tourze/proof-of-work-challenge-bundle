{% extends "base.html.twig" %}

{% block title %}挑战详情 - {{ challenge.id }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .info-card {
            transition: all 0.3s ease;
        }
        .info-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .challenge-content {
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 1rem;
            max-height: 200px;
            overflow-y: auto;
        }
        .metadata-content {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 1rem;
            max-height: 300px;
            overflow-y: auto;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="bi bi-shield-lock text-primary"></i>
                    挑战详情
                </h2>
                <div class="btn-group">
                    <a href="{{ path('admin_challenge_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> 返回列表
                    </a>
                    <button class="btn btn-outline-danger" onclick="deleteChallenge('{{ challenge.id }}')">
                        <i class="bi bi-trash"></i> 删除
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- 基本信息卡片 -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-3">
            <div class="card info-card h-100">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle"></i> 基本信息
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4 fw-bold text-muted">挑战ID:</div>
                        <div class="col-sm-8">
                            <code class="text-primary">{{ challenge.id }}</code>
                        </div>
                    </div>
                    <hr class="my-2">
                    <div class="row">
                        <div class="col-sm-4 fw-bold text-muted">类型:</div>
                        <div class="col-sm-8">
                            <span class="badge bg-info">{{ challenge.type }}</span>
                        </div>
                    </div>
                    <hr class="my-2">
                    <div class="row">
                        <div class="col-sm-4 fw-bold text-muted">难度等级:</div>
                        <div class="col-sm-8">
                            <span class="badge {% if challenge.difficulty >= 20 %}bg-danger{% elseif challenge.difficulty >= 15 %}bg-warning{% else %}bg-success{% endif %} fs-6">
                                {{ challenge.difficulty }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-3">
            <div class="card info-card h-100">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-clock"></i> 状态信息
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4 fw-bold text-muted">当前状态:</div>
                        <div class="col-sm-8">
                            {% if challenge.used %}
                                <span class="badge bg-secondary fs-6">
                                    <i class="bi bi-check-circle"></i> 已使用
                                </span>
                            {% elseif challenge.expired %}
                                <span class="badge bg-danger fs-6">
                                    <i class="bi bi-clock-history"></i> 已过期
                                </span>
                            {% else %}
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-shield-check"></i> 有效
                                </span>
                            {% endif %}
                        </div>
                    </div>
                    <hr class="my-2">
                    <div class="row">
                        <div class="col-sm-4 fw-bold text-muted">创建时间:</div>
                        <div class="col-sm-8">
                            {{ challenge.createTime|date('Y-m-d H:i:s') }}
                        </div>
                    </div>
                    <hr class="my-2">
                    <div class="row">
                        <div class="col-sm-4 fw-bold text-muted">过期时间:</div>
                        <div class="col-sm-8">
                            <span class="{% if challenge.expired %}text-danger{% else %}text-warning{% endif %}">
                                {{ challenge.expireTime|date('Y-m-d H:i:s') }}
                            </span>
                        </div>
                    </div>
                    {% if not challenge.expired %}
                        <hr class="my-2">
                        <div class="row">
                            <div class="col-sm-4 fw-bold text-muted">剩余时间:</div>
                            <div class="col-sm-8">
                                {% set remaining = challenge.expireTime - 'now'|date('U') %}
                                {% set minutes = (remaining / 60)|round(0, 'floor') %}
                                {% set seconds = remaining % 60 %}
                                <span class="text-warning fw-bold" id="countdown">
                                    {{ minutes }}分{{ seconds }}秒
                                </span>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- 客户端和资源信息 -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-3">
            <div class="card info-card h-100">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-person"></i> 客户端信息
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4 fw-bold text-muted">客户端ID:</div>
                        <div class="col-sm-8">
                            {% if challenge.clientId %}
                                <code class="text-muted">{{ challenge.clientId }}</code>
                            {% else %}
                                <span class="text-muted">未指定</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-3">
            <div class="card info-card h-100">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">
                        <i class="bi bi-folder"></i> 资源信息
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4 fw-bold text-muted">关联资源:</div>
                        <div class="col-sm-8">
                            {% if challenge.resource %}
                                <span class="text-info fw-bold">{{ challenge.resource }}</span>
                            {% else %}
                                <span class="text-muted">未指定</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 挑战内容 -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-code"></i> 挑战内容
                    </h6>
                </div>
                <div class="card-body">
                    <div class="challenge-content">{{ challenge.challenge }}</div>
                    <div class="mt-2">
                        <button class="btn btn-sm btn-outline-primary" onclick="copyToClipboard('{{ challenge.challenge }}')">
                            <i class="bi bi-clipboard"></i> 复制
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 元数据 -->
    {% if challenge.metadata %}
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-list-ul"></i> 元数据
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="metadata-content">
                            <pre class="mb-0">{{ challenge.metadata|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE')) }}</pre>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>

<!-- 删除确认模态框 -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">确认删除</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>警告</strong> 确认要删除此挑战吗？此操作不可撤销。
                </div>
                <p class="text-muted">挑战ID: <code>{{ challenge.id }}</code></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <form method="post" action="{{ path('admin_challenge_delete', {id: challenge.id}) }}" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ challenge.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> 确认删除
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function deleteChallenge(id) {
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                const toast = document.createElement('div');
                toast.className = 'position-fixed top-0 end-0 p-3';
                toast.style.zIndex = '1055';
                toast.innerHTML = `
                    <div class="toast show" role="alert">
                        <div class="toast-header">
                            <strong class="me-auto">提示</strong>
                            <button type="button" class="btn-close" onclick="this.parentNode.parentNode.parentNode.remove()"></button>
                        </div>
                        <div class="toast-body">
                            挑战内容已复制到剪贴板
                        </div>
                    </div>
                `;
                document.body.appendChild(toast);
                setTimeout(() => toast.remove(), 3000);
            });
        }

        // 倒计时更新
        {% if not challenge.expired %}
        setInterval(function() {
            const countdownElement = document.getElementById('countdown');
            if (countdownElement) {
                const expireTime = {{ challenge.expireTime }};
                const now = Math.floor(Date.now() / 1000);
                const remaining = expireTime - now;
                
                if (remaining <= 0) {
                    countdownElement.innerHTML = '<span class="text-danger">已过期</span>';
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    const minutes = Math.floor(remaining / 60);
                    const seconds = remaining % 60;
                    countdownElement.textContent = `${minutes}分${seconds}秒`;
                }
            }
        }, 1000);
        {% endif %}
    </script>
{% endblock %}