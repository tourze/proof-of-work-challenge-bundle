<div class="card h-100">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h6 class="mb-0">
            <i class="fas fa-shield-alt"></i> 
            工作证明挑战
        </h6>
        <a href="{{ path('admin_challenge_index') }}" class="btn btn-sm btn-outline-light">
            <i class="fas fa-external-link-alt"></i>
        </a>
    </div>
    <div class="card-body">
        {% if error is defined %}
            <div class="alert alert-warning alert-sm mb-2">
                <i class="fas fa-exclamation-triangle"></i>
                获取数据失败
            </div>
        {% else %}
            <div class="row text-center">
                <div class="col-6 mb-3">
                    <div class="stat-item">
                        <div class="stat-number text-success fs-4 fw-bold">{{ active }}</div>
                        <div class="stat-label text-muted small">有效挑战</div>
                    </div>
                </div>
                <div class="col-6 mb-3">
                    <div class="stat-item">
                        <div class="stat-number text-primary fs-4 fw-bold">{{ total }}</div>
                        <div class="stat-label text-muted small">总挑战数</div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-item">
                        <div class="stat-number text-warning fs-4 fw-bold">{{ expired }}</div>
                        <div class="stat-label text-muted small">已过期</div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-item">
                        <div class="stat-number text-secondary fs-4 fw-bold">{{ used }}</div>
                        <div class="stat-label text-muted small">已使用</div>
                    </div>
                </div>
            </div>
            
            {% if total > 0 %}
                <div class="mt-3">
                    <div class="progress" style="height: 8px;">
                        {% set activePercent = (active / total * 100)|round %}
                        {% set usedPercent = (used / total * 100)|round %}
                        {% set expiredPercent = (expired / total * 100)|round %}
                        
                        <div class="progress-bar bg-success" 
                             style="width: {{ activePercent }}%" 
                             title="有效: {{ activePercent }}%"></div>
                        <div class="progress-bar bg-secondary" 
                             style="width: {{ usedPercent }}%" 
                             title="已使用: {{ usedPercent }}%"></div>
                        <div class="progress-bar bg-warning" 
                             style="width: {{ expiredPercent }}%" 
                             title="已过期: {{ expiredPercent }}%"></div>
                    </div>
                    <div class="d-flex justify-content-between mt-1">
                        <small class="text-success">{{ activePercent }}% 有效</small>
                        <small class="text-muted">{{ usedPercent }}% 已用 | {{ expiredPercent }}% 过期</small>
                    </div>
                </div>
            {% endif %}
        {% endif %}
    </div>
    <div class="card-footer text-center">
        <a href="{{ path('admin_challenge_index') }}" class="btn btn-sm btn-outline-primary">
            <i class="fas fa-list"></i> 查看全部
        </a>
    </div>
</div>

<style>
.stat-item {
    padding: 0.5rem 0;
}
.stat-number {
    font-weight: 700;
    line-height: 1;
}
.stat-label {
    font-size: 0.75rem;
    margin-top: 0.25rem;
}
</style>